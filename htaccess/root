AddCharset utf-8 .html
AddType audio/ogg .oga .ogg
AddType video/ogg .ogv
AddType application/xspf+xml xspf
AddType audio/x-flac flac
Options +Indexes

Redirect 301 /files/public/colin_schedule.html http://lumeh.org/colin-schedule
Redirect 307 /colin-schedule http://lumeh.org/colin-schedule.pdf
Redirect 307 /colin-resume http://lumeh.org/files/public/resume-20140206.pdf

# Remove the www.
RewriteEngine On
RewriteBase /
RewriteCond %{HTTP_HOST} ^www\.lumeh\.org$ [NC]
RewriteRule ^(.*)$ http://lumeh.org/$1 [L,R=permanent]

RewriteCond %{HTTP_HOST} ^lumeh.chanspace.org$ [OR]
RewriteCond %{HTTP_HOST} ^www.lumeh.chanspace.org$
RewriteRule ^/?$ "http\:\/\/lumeh\.org\/" [L,R=301]
